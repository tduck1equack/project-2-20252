generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TaxRate {
  id          String       @id @default(uuid())
  code        String // e.g., "VAT_10"
  rate        Float // e.g., 0.10
  description String?
  tenantId    String
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  isActive    Boolean      @default(true)
  salesOrders SalesOrder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EInvoiceProviderConfig {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  provider String // e.g., "MOCK", "VIETTEL", "VNPT"

  apiKey    String?
  apiSecret String?
  username  String?
  password  String?

  baseUrl String? // Override for defaults

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Actually usually one Active provider suffices, but we might keep history.
  // For now unique per tenant/provider.

  @@unique([tenantId, provider]) // Can have multiple configs, but one per provider type per tenant? Or one active?
}

enum EInvoiceStatus {
  PENDING
  PUBLISHED
  FAILED
  CANCELLED
}

model EInvoiceLog {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  // Link to Journal Entry or Invoice (Sales)
  // For now, let's link to generic Reference string to avoid tight coupling until Sales module exists
  transactionRef String? // e.g. "INV-001"

  provider String // "MOCK"

  externalId     String? // ID returned by provider
  externalSerial String? // Invoice Series
  externalNo     String? // Invoice Number

  status EInvoiceStatus @default(PENDING)

  requestPayload  String? // XML Content
  responsePayload String? // JSON Response from Provider

  signature String? // Digital Signature

  orderId String?
  order   SalesOrder? @relation(fields: [orderId], references: [id])

  errorMessage String?

  publishedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tenant {
  id              String                   @id @default(uuid())
  name            String
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt
  users           User[]
  warehouses      Warehouse[]
  products        Product[]
  uoms            Uom[]
  stockMovements  StockMovement[]
  accounts        Account[]
  journalEntries  JournalEntry[]
  einvoiceConfigs EInvoiceProviderConfig[]
  einvoiceLogs    EInvoiceLog[]
  salesOrders     SalesOrder[]
  taxRates        TaxRate[]
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  REVENUE
  EXPENSE
}

model Account {
  id   String      @id @default(uuid())
  code String // e.g., "111", "131"
  name String
  type AccountType // Derived from first digit usually, but good to be explicit

  details String? // Circular 200 description

  apiCode String? @unique // Optional shorthand unique code per tenant? 
  // Actually code needs to be unique per tenant.

  parentId String?
  parent   Account?  @relation("AccountHierarchy", fields: [parentId], references: [id])
  children Account[] @relation("AccountHierarchy")

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  journalLines JournalEntryLine[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([code, tenantId])
}

enum JournalStatus {
  DRAFT
  POSTED
}

model JournalEntry {
  id          String   @id @default(uuid())
  date        DateTime
  reference   String? // Link to external docs (Invoice #, PO #)
  description String?

  status JournalStatus @default(DRAFT)

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  createdById String?
  createdBy   User?   @relation(fields: [createdById], references: [id])

  lines JournalEntryLine[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JournalEntryLine {
  id      String       @id @default(uuid())
  entryId String
  entry   JournalEntry @relation(fields: [entryId], references: [id])

  accountId String
  account   Account @relation(fields: [accountId], references: [id])

  debit  Float @default(0)
  credit Float @default(0)

  description String? // Line specific description

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id               String          @id @default(uuid())
  email            String          @unique
  password         String
  name             String?
  role             Role            @default(CUSTOMER)
  tenantId         String?
  tenant           Tenant?         @relation(fields: [tenantId], references: [id])
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  movementsCreated StockMovement[]
  journalEntries   JournalEntry[]
  refreshTokens    RefreshToken[]
  orders           SalesOrder[]
}

enum Role {
  CUSTOMER // View products, orders
  EMPLOYEE // Manage stock (replaces WAREHOUSE_KEEPER)
  MANAGER // Manage accounts, warehouses
  ADMIN // System admin
  ACCOUNTANT // Financial operations
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  @@index([userId])
  @@index([token])
}

model Warehouse {
  id            String          @id @default(uuid())
  name          String
  location      String?
  tenantId      String
  tenant        Tenant          @relation(fields: [tenantId], references: [id])
  stocks        Stock[]
  movementsFrom StockMovement[] @relation("FromWarehouse")
  movementsTo   StockMovement[] @relation("ToWarehouse")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Product {
  id          String           @id @default(uuid())
  name        String
  sku         String           @unique
  description String?
  uomId       String
  uom         Uom              @relation(fields: [uomId], references: [id])
  tenantId    String
  tenant      Tenant           @relation(fields: [tenantId], references: [id])
  variants    ProductVariant[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model ProductVariant {
  id            String              @id @default(uuid())
  name          String
  sku           String              @unique
  productId     String
  product       Product             @relation(fields: [productId], references: [id])
  price         Decimal             @default(0) @db.Decimal(10, 2)
  stocks        Stock[]
  movementItems StockMovementItem[]
  batches       Batch[]
  orderItems    SalesOrderItem[]
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  CANCELLED
}

model SalesOrder {
  id   String @id @default(uuid())
  code String @unique // SO-2024-001

  tenantId   String
  tenant     Tenant @relation(fields: [tenantId], references: [id])
  customerId String // User.id
  customer   User   @relation(fields: [customerId], references: [id])

  status      OrderStatus @default(PENDING)
  totalAmount Decimal     @db.Decimal(12, 2)

  taxAmount Decimal? @db.Decimal(12, 2)
  taxRateId String?
  taxRate   TaxRate? @relation(fields: [taxRateId], references: [id])

  einvoiceLogs EInvoiceLog[]

  items SalesOrderItem[]

  movementId String?
  movement   StockMovement? @relation(fields: [movementId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SalesOrderItem {
  id               String         @id @default(uuid())
  orderId          String
  order            SalesOrder     @relation(fields: [orderId], references: [id])
  productVariantId String
  productVariant   ProductVariant @relation(fields: [productVariantId], references: [id])
  quantity         Float
  unitPrice        Decimal        @db.Decimal(10, 2)
  totalPrice       Decimal        @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Uom {
  id        String    @id @default(uuid())
  name      String
  code      String    @unique
  tenantId  String
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Batch {
  id                String         @id @default(uuid())
  code              String // Batch Number
  productVariantId  String
  productVariant    ProductVariant @relation(fields: [productVariantId], references: [id])
  expiryDate        DateTime?
  manufacturingDate DateTime?

  stocks        Stock[]
  movementItems StockMovementItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([code, productVariantId])
}

model Stock {
  id               String         @id @default(uuid())
  warehouseId      String
  warehouse        Warehouse      @relation(fields: [warehouseId], references: [id])
  productVariantId String
  productVariant   ProductVariant @relation(fields: [productVariantId], references: [id])

  batchId String?
  batch   Batch?  @relation(fields: [batchId], references: [id])

  quantity  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Unique stock record per warehouse + variant + ("batch" or null)
  // Note: Standard Prisma unique constraint with nullable fields fits Postgres well enough for this scope, 
  // though strictly "null != null" in SQL. For simplicity, we might enforce a "default" batch if needed, 
  // but let's try strict unique first. 
  // Actually, easiest is to allow multiple nulls? No, we want to SUM them. 
  // If batchId is null, it's unbatched stock. We only want ONE unbatched record.
  // Postgres 15+ supports NULLS NOT DISTINCT. Assuming PG 16 (from docker-compose).
  // But Prisma support for NULLS NOT DISTINCT is explicit.
  // Use a string 'N/A' or similar for no-batch? Or handle in application logic.
  // For now, let's just add batchId to the composite key.
  @@unique([warehouseId, productVariantId, batchId])
}

enum MovementType {
  INBOUND
  OUTBOUND
  TRANSFER
  ADJUSTMENT
}

enum MovementStatus {
  DRAFT
  COMPLETED
  CANCELLED
}

model StockMovement {
  id        String         @id @default(uuid())
  code      String         @unique // e.g. MOV-2024-001
  type      MovementType
  status    MovementStatus @default(DRAFT)
  date      DateTime       @default(now())
  reference String? // PO, SO, etc.

  fromWarehouseId String?
  fromWarehouse   Warehouse? @relation("FromWarehouse", fields: [fromWarehouseId], references: [id])

  toWarehouseId String?
  toWarehouse   Warehouse? @relation("ToWarehouse", fields: [toWarehouseId], references: [id])

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  items StockMovementItem[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  salesOrders SalesOrder[]
}

model StockMovementItem {
  id               String         @id @default(uuid())
  movementId       String
  movement         StockMovement  @relation(fields: [movementId], references: [id])
  productVariantId String
  productVariant   ProductVariant @relation(fields: [productVariantId], references: [id])
  quantity         Float

  batchId String?
  batch   Batch?  @relation(fields: [batchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
