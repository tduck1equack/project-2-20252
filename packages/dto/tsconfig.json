{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}